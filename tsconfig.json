{
  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "esModuleInterop": true,
    "strict": false,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ]
}
